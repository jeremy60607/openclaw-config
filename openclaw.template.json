{
  "$schema": "https://docs.openclaw.ai/schema/openclaw.json",
  "_comment": "OpenClaw config template. Secrets (tokens, API keys) should use env vars, not this file.",
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "hooks": {
    "internal": {
      "enabled": true,
      "entries": {
        "boot-md": {
          "enabled": true
        },
        "command-logger": {
          "enabled": true
        },
        "session-memory": {
          "enabled": true
        }
      }
    }
  },
  "web": {
    "enabled": true
  },
  "skills": {
    "install": {
      "nodeManager": "npm"
    }
  },
  "tools": {
    "agentToAgent": {
      "allow": [
        ""
      ]
    }
  },
  "messages": {
    "ackReactionScope": "group-mentions"
  },
  "agents": {
    "defaults": {
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      },
      "compaction": {
        "mode": "safeguard"
      },
      "models": {
        "zai/glm-4.7": {
          "alias": "GLM"
        },
        "zai/glm-4.7-flash": {
          "alias": "GLM-Flash"
        }
      },
      "model": {
        "primary": "zai/glm-4.7"
      }
    },
    "list": [
      {
        "id": "daily",
        "default": true,
        "workspace": "~/.openclaw/workspace-daily",
        "model": "zai/glm-4.7",
        "tools": {
          "profile": "full"
        },
        "sandbox": {
          "mode": "off"
        }
      },
      {
        "id": "home",
        "workspace": "~/.openclaw/workspace-home",
        "model": "zai/glm-4.7-flash",
        "identity": {
          "name": "HomeBot",
          "theme": "smart home controller"
        },
        "tools": {
          "profile": "full",
          "deny": ["group:fs", "bash", "process", "browser", "group:web"]
        },
        "sandbox": {
          "mode": "off"
        }
      }
    ]
  },
  "gateway": {
    "mode": "local",
    "auth": {
      "mode": "token",
      "_token_comment": "Token is auto-generated by onboard wizard. Do NOT put real token here."
    },
    "port": 18789,
    "bind": "loopback",
    "tailscale": {
      "mode": "off",
      "resetOnExit": false
    }
  },
  "auth": {
    "profiles": {
      "zai:default": {
        "provider": "zai",
        "mode": "api_key"
      }
    }
  },
  "plugins": {
    "entries": {
      "telegram": {
        "enabled": true
      }
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "accounts": {
        "default": {
          "_botToken_comment": "Set via OPENCLAW_TELEGRAM_BOT_TOKEN env var or paste during onboard wizard"
        },
        "homebot": {
          "_botToken_comment": "Set via TELEGRAM_BOT_TOKEN_HOME env var",
          "dmPolicy": "pairing"
        }
      }
    }
  },
  "bindings": [
    {
      "agentId": "daily",
      "match": {
        "channel": "telegram",
        "accountId": "default"
      }
    },
    {
      "agentId": "home",
      "match": {
        "channel": "telegram",
        "accountId": "homebot"
      }
    }
  ]
}
